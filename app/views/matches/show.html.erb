<!-- Page Title -->
  <div class="section section-breadcrumbs">
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h1>Breedr Chat</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="section">
    <div class="container">
      <div class="row-sm-6">
        <div class="portfolio-item">
          <div class="portfolio-image">
              <img src="<%= @confirmed_match.pet.image %>" height="300" width="335">
              <img src="<%= @confirmed_match.inverse_pet.image %>" height="300" width="335">
          </div>
          <div class="portfolio-info-fade">
            <ul>
              <br>
              <br>
              <br>
              <li class="portfolio-project-name"><%= @confirmed_match.pet.name %> &hearts; <%= @confirmed_match.inverse_pet.name %></li>
            </ul>
          </div>
        </div>
      </div>

      <div id="app">
        <div v-for="message in messages">
          {{ message.pet_id }}: {{ message.body }}
        </div>

        <input type="text" name="newMessageBody">
        <button v-on:click="createMessage()">Send</button>
      </div>

    </div>
  </div>

