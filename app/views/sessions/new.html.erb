  <div>
    Email: <input type="email" name="email">
  </div>
  <div>
    Password: <input type="password" name="password">
  </div>
  <input type="submit" value="Log In">
  <br>
  <br>
  <br>
  <a href="/signup">Don't have an account?</a>
<% end %>