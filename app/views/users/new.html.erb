<div class="section section-breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Sign Up</h1>
      </div>
    </div>
  </div>
</div>


<div class="section">
<div class="container">
<div class="row">
    <div class="basic-login">
      <%= form_tag '/users', method: :post do  %>
      <form role="form">
        <div class="form-group">
              <label for="first_name"><i class="icon-user"></i> <b>First Name</b></label>
          <input class="form-control" id="first_name" type="text" placeholder="">
        </div>
        <div class="form-group">
              <label for="last_name"><i class="icon-user"></i> <b>Last Name</b></label>
          <input class="form-control" id="last_name" type="text" placeholder="">
        </div>
        <div class="form-group">
              <label for="email"><i class="icon-user"></i> <b>Email</b></label>
          <input class="form-control" id="email" type="text" placeholder="">
        </div>
        <div class="form-group">
              <label for="phone_number"><i class="icon-user"></i> <b>Phone Number</b></label>
          <input class="form-control" id="phone_number" type="text" placeholder="">
        </div>
        <div class="form-group">
              <label for="password"><i class="icon-lock"></i> <b>Password</b></label>
          <input class="form-control" id="password" type="password" placeholder="">
        </div>
        <div class="form-group">
              <label for="password_confirmation"><i class="icon-lock"></i> <b>Re-enter Password</b></label>
          <input class="form-control" id="password_confirmation" type="password" placeholder="">
        </div>
        <div class="form-group">
          <button type="submit" class="btn pull-right">Register</button>
          <div class="clearfix"></div>
        </div>
      </form>
      <% end %>
    </div>
  </div>
  </div>
</div>