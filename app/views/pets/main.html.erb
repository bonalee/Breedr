<div class="section">
<div class="container">
<h1>Welcome <%= current_user.first_name %>!</h1>
<h4><a href="/matches">View All Matches</a></h4>
<br>
<br>
<h2>My Pets</h2>
<% @pets.each do |pet| %>
  <div class="col-sm-6">
    <div class="portfolio-item">
      <div class="portfolio-image">
        <a href="/pets/<%= pet.id %>"><img src="<%= pet.image %>" height="335" width="335"></a>
      </div>
      <div class="portfolio-info-fade">
        <ul>
          <li class="portfolio-project-name"><%= pet.name %></li>
          <li>Birthdate: <%= pet.birthdate %></li>
          <li>Gender: <%= pet.gender %></li>
          <br>
          <br>
          <a href="/pets?pet_id=<%= pet.id %>" class="btn">Select This Pet</a>
          <a href="/pets/<%= pet.id %>" class="btn">Delete This Pet</a>
        </ul>
      </div>
    </div>
  </div>
<% end %>
</div>
</div>
<a href="/pets/new" class="btn">Register New Pet</a>