<h1>Register My Pup</h1>
<%= form_tag "/pets/#{@pet.id}", method: "patch" do %>
  <div class="form-group">
    Name: <input type="text" class="form-control" value="<%= @pet.name %>" name="name">
  </div>
  <div class="form-group">
    Birthdate: <input type="text" class="form-control" value="<%= @pet.birthdate %>" name="birthdate">
  </div>

  <div class="form-group" value="<%= @pet.gender %>" name="gender">
    Gender: 
    <select>
      <option value="male">Male</option>
      <option value="female">Female</option>
    </select>
  </div>

  <div class="form-group" value="<%= @pet.breed_id %>" name="breed_id">
    Breed:
    <select>
      <%= @breeds.each do |breed| %>
        <option value=""><%= breed.name %></option>
      <% end %>
    </select>
  </div>
  <input type="submit" class="btn btn-default" value="Register Pet">
<% end %>