<!-- Page Title -->
<div class="section section-breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Register a Pup</h1>
      </div>
    </div>
  </div>
</div>

<div class="section">
<div class="container">
<div class="row">
<%= form_tag "/pets", method: "post" do %>
  <div class="basic-login">
    <form role="form" role="form">
    <div class="form-group">
      Name: <input type="text" class="form-control" name="name">
    </div>
    <div class="form-group">
      Birthdate: <input type="text" class="form-control" name="birthdate">
    </div>
    <div class="form-group" name="gender">
      Gender: 
      <select>
        <option value="male">Male</option>
        <option value="female">Female</option>
      </select>
    </div>
    <div class="form-group" name="breed_name">
      Breed:
      <select>
        <%= @breeds.each do |breed| %>
          <option value="Poodle"><%= breed.name %></option>
        <% end %>
      </select>
    </div>
  <input type="submit" class="btn btn-default" value="Register Pet">
<% end %>
</div>
</div>
</div>